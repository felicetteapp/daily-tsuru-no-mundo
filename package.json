    "@skyra/gifenc": "^1.0.1",
    "canvas-constructor": "^7.0.2",
    "chroma-js": "^3.1.2",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.5",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.3.1",
